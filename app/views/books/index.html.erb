<%= render 'list', books: @books %>
<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= image_tag book.user.get_profile_image(80,80) %>
        </td>
        <td>
          <%= link_to book_path(params[:id]) do %>
            <%= @books.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
